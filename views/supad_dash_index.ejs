<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Plugin CSS -->
    <link rel="stylesheet" href="assets/plugins/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome-free-6.4.0-web/css/all.min.css">

    <!-- Local CSS -->
    <link rel="stylesheet" href="assets/css/manage-product-table.css">
    <link rel="stylesheet" href="assets/css/add-edit-product.css">
    <link rel="stylesheet" href="assets/css/modal.css">
    <link rel="stylesheet" href="assets/css/super-admin/super-admin-sidetopbar.css">
    <link rel="stylesheet" href="assets/css/super-admin/super-admin-dash.css">

    <!-- Icon -->
    <link rel="icon" href="images/icons/provlogo.png" type="image/x-icon">
    <!-- Page Title -->
    <title>Super-Admin Dashboard</title>
</head>

<body>
    <div class="wrapper">

        <!-- Sidebar Section Start -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><img src="../../images/icons/provlogo.png" class="img-fluid" /><span>PROVENTORY</span></h3>
            </div>
            <ul class="list-unstyled component m-0">
                <li class="active">
                    <a href="/superadmin_dashboard" class="dashboard"><i class="fa-solid fa-gauge"></i>Dashboard </a>
                </li>

                <li class="">
                    <a href="/superadmin_profile" class=""><i class="fa-solid fa-user"></i>Profile </a>
                </li>
                <li class="">
                    <a href="/manage_accounts_main" class=""><i class="fa-solid fa-users-gear"></i>Accounts</a>
                </li>

                <li class="">
                    <a href="/supad_recentlogs" class=""><i class="fa-solid fa-clock"></i>Recent Logs </a>
                </li>

                <li class="">
                    <a href="/superadmin_logout" class=""><i class="fa-solid fa-right-from-bracket"></i>Logout </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar Section END -->


        <!-- Page-content Start -->

        <div id="content">

            <!-- Top-Navbar Start -->
            <div class="top-navbar">
                <div class="xd-topbar">
                    <div class="row">
                        <div class="col-2 col-md-1 col-lg-1 order-2 order-md-1 align-self-center">
                            <div class="xp-menubar">
                                <i class="fa-solid fa-bars"></i>
                            </div>
                        </div>

                        <!-- Search Bar Start -->
                        <div class="col-md-5 col-lg-3 order-3 order-md-2">
                            <div class="xp-searchbar">
                                <form>
                                    <div class="input-group">
                                        <input type="search" class="form-control" placeholder="Search">
                                        <div class="input-group-append">
                                            <button class="btn" type="submit" id="button-addon2">Go
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- Search Bar End -->

                        <div class="col-10 col-md-6 col-lg-8 order-1 order-md-3">
                            <div class="xp-profilebar text-right">
                                <nav class="navbar p-1">
                                    <ul class="nav navbar-nav flex-row ml-auto">
                                        <li class="dropdown nav-item">
                                            <a class="nav-link" href="#" data-toggle="dropdown">
                                                <i class="fa-solid fa-bell fa-xl"></i>
                                                <span class="notification">#</span>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a href="#">You Have # New Messages</a></li>
                                            </ul>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" href="#">
                                                <i class="fa-solid fa-envelope fa-xl"></i>
                                            </a>
                                        </li>

                                        <li class="dropdown nav-item">
                                            <a class="nav-link" href="#" data-toggle="dropdown">
                                                <img id="dash-prof" src="../../images/icons/profile-dashboard.png" />
                                                <span class="xp-user-live"></span>
                                            </a>
                                            <ul class="dropdown-menu small-menu">
                                                <li><a href="./profile.html">
                                                        <span class="material-icons">Profile</span>
                                                    </a></li>
                                                <li><a href="#">
                                                        <span class="material-icons">Settings</span>
                                                    </a></li>
                                                <li><a href="../super-admin/super-admin-log.html">
                                                        <span class="material-icons">logout</span>
                                                    </a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- Top-Navbar End -->


            <!-- Main-Content START -->

            <div class="main-content">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Dashboard</h4>
                        <p>Welcome <%=data[0].adminname%>
                        </p>
                        <hr>
                    </div>
                </div>

                <!-- Status Section - START -->

                <section class="status-section">
                    <div class="website-stats">
                        <div class="stat bg-info">
                            <h1>
                                <i class="fa-solid fa-users"></i>
                                <span id="total-products">480</span>
                            </h1>
                            <p>Total Users</p>
                        </div>
                        <div class="stat bg-success">
                            <h1>
                                <i class="fa-solid fa-user-check"></i>
                                <span id="store-value">15</span>
                            </h1>
                            <p>Total Active Users</p>
                        </div>
                        <div class="stat bg-danger ">
                            <h1>
                                <i class="fa-solid fa-user-xmark"></i>
                                <span id="out-of-stock">45</span>
                            </h1>
                            <p>Out of Stock</p>
                        </div>
                    </div>

                    <div class="user-logs">
                        <h5>User Log Stats</h5>
                        <div class="row sales-status">
                            <div class="sales-stat week">
                                <h3>
                                    <i class="fa-solid fa-user"></i>
                                    <span id="week-income">20</span>
                                </h3>
                                <p>This Week's Total Active Users</p>
                            </div>
                            <div class="sales-stat month">
                                <h3>
                                    <i class="fa-solid fa-user"></i>
                                    <span id="month-income">33</span>
                                </h3>
                                <p>This Months's Active Users</p>
                            </div>
                            <div class="sales-stat year">
                                <h3>
                                    <i class="fa-solid fa-user"></i>
                                    <span id="year-income">157</span>
                                </h3>
                                <p>This Year's Active Users</p>
                            </div>
                        </div>
                        <div>
                            <!--<img class="sales-graph" src="../images/sample-graph.png" alt="">-->
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </section>

                <!-- Status Section - END -->

                <!-- Table start -->
                <br>
                <span id="message"></span>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-wrapper">
                            <!-- Top Part of table -->
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
                                        <h2 class="ml-lg-2">User Accounts Overview</h2>
                                    </div>
                                    <div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
                                        <button type="button" class="btn btn-success" id="add_account">
                                            <i class="fa-solid fa-user-plus"></i>
                                            <span>Add New Account</span>
                                        </button>
                                        <a href="#" class="btn btn-danger">
                                            <i class="fa-solid fa-user-minus"></i>
                                            <span>Delete Account</span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-striped table-hover" id="accounts_table">
                                <!-- Table Names -->
                                <thead>
                                    <tr>
                                        <th>Select</th>
                                        <th>Account #</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <!-- Table Names -->

                                <tbody class="account-list"></tbody>


                            </table>

                            <div class="clearfix">
                                <div class="hint-text">Showing <b>5</b> out of <b>#</b></div>
                                <ul class="pagination">
                                    <li class="page-item disabled"><a href="#">Previous</a></li>
                                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                    <li class="page-item "><a href="#" class="page-link">2</a></li>
                                    <li class="page-item "><a href="#" class="page-link">3</a></li>
                                    <li class="page-item "><a href="#" class="page-link">4</a></li>
                                    <li class="page-item "><a href="#" class="page-link">5</a></li>
                                    <li class="page-item "><a href="#" class="page-link">Next</a></li>
                                </ul>
                            </div>

                            <!-- New Delete Modal - Statrt -->

                            <div class="modal fade" tabindex="-1" id="confirm_delete_modal">
                                <div class="modal-dialog text-center">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Delete Account</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <i class="fa-solid fa-triangle-exclamation text-danger"></i>
                                            WARNING
                                            <i class="fa-solid fa-triangle-exclamation text-danger"></i>

                                            <p>Are you sure you want to delete?</p>
                                            <p class="text-warning"><small>This account will be deleted permanently in
                                                    the database and will never be
                                                    recovered.</small></p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button>
                                            <button type="button" class="btn btn-danger"
                                                id="delete_account">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- New Delete Modal - End -->

                            <!-- Add/Edit Product Modal - Start -->
                            <div class="modal fade" tabindex="-1" id="accmng_modal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form method="post" id="add_account_form">
                                            <div class="modal-header" id="dynamic_modal_title">
                                                <h5 class="modal-title"></h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label">First Name:</label>
                                                    <input type="text" class="form-control" name="fname"
                                                        id="fname" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Last Name:</label>
                                                    <input type="text" class="form-control" name="lname"
                                                        id="lname" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">User Name:</label>
                                                    <input type="text" class="form-control" name="username"
                                                        id="username" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Email Address:</label>
                                                    <input type="email" class="form-control" name="email"
                                                        id="email" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Account Category:</label>
                                                    <select name="account_category" id="account_category" class="form-control" required>
                                                        <option value="" disabled selected>Choose a category</option>
                                                        <option>Admin</option>
                                                        <option>Employee</option>
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Password:</label>
                                                    <input type="text" class="form-control" name="password"
                                                        id="password" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Phone Number:</label>
                                                    <input type="text" class="form-control" name="phone_number"
                                                        id="phone_number" required>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <input type="hidden" name="id" id="id">
                                                <input type="hidden" name="accmng" id="accmng" value="Add">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success" id="accmng_btn"></button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Add/Edit Product Modal - END -->

                        </div>
                    </div>
                </div>
                <!-- Table end-->

            </div>
        </div>
    </div>
    <!-- Table end-->
    </div>
    <!-- Main-Content END -->




    <!-- Footer-Section START -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="footer-in">
                <p class="mb-0">&copy 2022 Proventory. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Footer-Section END -->

    </div>
    <!-- Page-Content END -->

    </div>

    </div>
